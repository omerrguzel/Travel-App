<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayout_Theme" parent="@style/Theme.TravelApp">
        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tab_text_home" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="tab_text_trip" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="customRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

</resources>